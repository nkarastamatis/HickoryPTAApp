 @model PTAData.Entities.Committee

@{
    
}


<div class="divPanel notop page-content container-fluid">

    <h1>@Model.CommitteeName</h1>

    <div class="row">

        <!--Edit Sidebar Content here-->
        <div class="col-md-3">
            <h3>Description</h3>
            <p>@Model.Description</p>

            <h3>Chair Persons</h3>
            @foreach (var chair in Model.ChairPersons)
            {
                <p>
                    <address>
                        <strong>@chair.Member.Name</strong><br />
                        <abbr title="Phone">P:</abbr>
                        <a href=@String.Format(" tel:+{0}", chair.Member.Phone)>chair.Member.Phone</a><br />
                        <a href="mailto:@chair.Member.Email">chair.Member.Email</a>
                    </address>
                </p>
            }
        </div>
        <!--/End Sidebar Content -->

        <!--Edit Main Content Area here-->
        <div class="col-md-9" id="divMain">
            <br />
            <fieldset>
                <legend>Events</legend>
                <div class="panel-group" id="accordionEvents">

                    @foreach (var evnt in Model.Events)
                    {
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <div class="panel-title">
                                    <a data-toggle="collapse" data-parent="accordionEvents" href="#collapse@(evnt.PostId)">
                                        <table class="table">
                                            <tbody>
                                                <tr>
                                                    <td style="border-top:none; padding:0px">
                                                        <h4>@evnt.PostTitle</h4>
                                                    </td>
                                                    <td style="border-top:none; padding:0px">
                                                        <h4 class="text-right">@evnt.EventDate.ToShortDateString()</h4>
                                                        <h4 class="text-right">@evnt.EventDate.ToShortTimeString()</h4>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td style="border-top:none; padding:0px">
                                                        @{
                                                            var locationName = evnt.Location != null ? evnt.Location.Name : "Here ";

                                                            if (locationName != null)
                                                            {
                                                                        <h4>@locationName</h4>
                                                            }

                                                        }

                                                    </td>

                                                </tr>
                                            </tbody>

                                        </table>
                                    </a>
                                </div>
                            </div>

                            <div id="collapse@(evnt.PostId)" class="panel-collapse collapse in">
                                <div class="panel-body">
                                    @evnt.PostBody
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </fieldset>

            <br />
            <fieldset>
                <legend>Posts</legend>
                <div class="panel-group" id="accordionPosts">

                    @foreach (var post in Model.Posts)
                    {
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="accordionPosts" href="#collapse@(post.PostId)">
                                        @post.PostTitle
                                    </a>
                                </h4>
                            </div>

                            <div id="collapse@(post.PostId)" class="panel-collapse collapse in">
                                <div class="panel-body">
                                    @post.PostBody
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </fieldset>

            <div class="table-responsive">
                <table class="table table-condensed table-striped">
                    <thead>
                        <tr>
                            <td>Attachment</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @*<asp:Repeater ID="AttachedFiles">
                            <itemtemplate>
                                <tr>
                                    <td><%# Container.DataItem as string %></td>
                                </tr>
                            </itemtemplate>
                        </asp:Repeater>*@
                    ></tbody>
                </table>
            </div>
        </div>

        <!--/End Main Content Area here-->


    </div>

    <div id="footerInnerSeparator"></div>
</div>
