
@model DateTime

@{   
    DateTime dt;
    if (Model == null)
    {
        dt = (DateTime)Model;        
    }
    else
    {
        dt = DateTime.Now;
    }

    TimeSpan ts;

    if (Model == null)
    {
        ts = TimeSpan.FromMinutes(10);
    }
    else
    {
        ts = Model.TimeOfDay;
    }
}
<div class="form-group">

    @Html.LabelFor(m => m.Date, new { @class = "col-md-2" })
    @Html.LabelFor(m => m.TimeOfDay, "Time", new { @class = "col-md-2" })
</div>
<div class="form-group">
    <div class="col-md-2">
        @Html.TextBox("Date", dt.ToShortDateString(), new { @class = "form-control datepicker", data_provide = "datepicker", data_date_language = "globalize", data_date = dt.ToShortDateString(), data_date_format = System.Threading.Thread.CurrentThread.CurrentUICulture.DateTimeFormat.ShortDatePattern.Replace("M", "m"), data_date_today_highlight = "true", data_date_today_btn = "false" })
        @*@Html.TextBoxFor(m => m.Date, new { @class = "form-control datepicker", data_provide = "datepicker", data_date_language = "globalize", data_date = dt.ToShortDateString(), data_date_format = System.Threading.Thread.CurrentThread.CurrentUICulture.DateTimeFormat.ShortDatePattern.Replace("M", "m"), data_date_today_highlight = "true", data_date_today_btn = "false" })*@
        @Html.ValidationMessageFor(m => m, null, new { @class = "help-block" })
    </div>
    <div class="col-md-2">

        @Html.TextBox("Time", dt.ToString("hh:mm tt"), new { @Value = dt.ToString("hh:mm tt"), @class = "form-control timepicker", data_provide = "timepicker", data_minute_step = "5", data_show_meridian = "true", data_disable_focus = "true", data_template = "dropdown", data_default_time = "value" })
        @*@Html.TextBoxFor(m => m.TimeOfDay, "hh:mm tt", new { @Value = dt.ToString("hh:mm tt"), @class = "form-control timepicker", data_provide = "timepicker", data_minute_step = "5", data_show_meridian = "true", data_disable_focus = "true", data_template = "dropdown", data_default_time = "value" })*@
        @Html.ValidationMessageFor(m => m, null, new { @class = "help-block" })
    </div>
</div>
