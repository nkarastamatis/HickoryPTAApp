@model PTAData.Entities.Post

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Committee</legend>

    <div class="display-label">CommitteeName</div>
    <div class="display-field">@Model.CommitteeName</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">ChairPersons</div>
    <div class="display-field">@(Model.ChairPersons == null ? "None" : Model.ChairPersons.Count.ToString())</div>

    <div class="display-label">AttachedFiles</div>
    <div class="display-field">@(Model.AttachedFiles == null ? "None" : Model.AttachedFiles.Count.ToString())</div>

    <div class="display-label">Posts</div>
    <div class="display-field">@(Model.Posts == null ? "None" : Model.Posts.Count.ToString())</div>

    <div class="display-label">LastModified</div>
    <div class="display-field">@String.Format("{0:g}", Model.LastModified)</div>

    <div class="display-label">CreatedOn</div>
    <div class="display-field">@String.Format("{0:g}", Model.CreatedOn)</div>

    <div class="display-label">UserModified</div>
    <div class="display-field">@Model.UserModified</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


